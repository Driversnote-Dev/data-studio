{
  "data": [
    {
      "id": "data",
      "label": "Data",
      "elements": [
        {
          "id": "target",
          "label": "Target",
          "type": "METRIC",
          "options": {
            "min": 1,
            "max": 1
          }
        },
        {
          "id": "actual",
          "label": "Actual",
          "type": "METRIC",
          "options": {
            "min": 1,
            "max": 1
          }
        }
      ]
    }
  ],
  "style": [
    {
      "id": "config",
      "label": "Chart Options",
      "elements": [
        {
          "id": "title",
          "label": "Chart Title",
          "type": "TEXTINPUT"
        },
        {
          "id": "measure",
          "label": "Field Name",
          "type": "TEXTINPUT"
        },
        {
          "id": "format",
          "label": "Chart Type (% or fraction)",
          "defaultValue": "percentage",
          "type": "SELECT_SINGLE",
          "options": [
            {
              "value": "percentage",
              "label": "Percentage (%)"
            },
            {
              "value": "values",
              "label": "Fraction (n/m)"
            }
          ]
        }
      ]
    },
    {
      "id": "value_display_config",
      "label": "Number Formatting",
      "elements": [
        {
          "id": "locale",
          "label": "Locale",
          "type": "TEXTINPUT",
          "defaultValue": "en-US"
        },
        {
          "id": "valueType",
          "label": "Value Type",
          "type": "SELECT_SINGLE",
          "defaultValue": "decimal",
          "options": [
            {
              "value": "decimal",
              "label": "Decimal"
            },
            {
              "value": "currency",
              "label": "Currency"
            },
            {
              "value": "percent",
              "label": "Percent"
            }
          ]
        },
        {
          "id": "currency",
          "label": "Currency Code (ex USD)",
          "type": "TEXTINPUT",
          "defaultValue": "USD"
        },
        {
          "id": "maximumFractionDigits",
          "label": "Maximum Fraction Digits",
          "type": "INTERVAL"
        },
        {
          "id": "minimumFractionDigits",
          "label": "Minimum Fraction Digits",
          "type": "INTERVAL"
        }
      ]
    },
    {
      "id": "style_config",
      "label": "Font, Color & Alignment",
      "elements": [
        {
          "id": "fontFamily",
          "label": "Font Family",
          "type": "FONT_FAMILY",
          "defaultValue": "Roboto"
        },
        {
          "id": "isPlural",
          "label": "Field Name Pluralized",
          "type": "CHECKBOX",
          "defaultValue": true
        },
        {
          "id": "negativeColor",
          "label": "Below Target Color",
          "type": "FONT_COLOR",
          "defaultValue": "#E64A19"
        },
        {
          "id": "positiveColor",
          "label": "Above Target Color",
          "type": "FONT_COLOR",
          "defaultValue": "#00838F"
        },
        {
          "id": "alignment",
          "label": "Alignment",
          "type": "SELECT_SINGLE",
          "defaultValue": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            }
          ]
        }
      ]
    },
    {
      "id": "debug",
      "label": "Debug",
      "elements": [
        {
          "id": "debug",
          "label": "Debug Mode",
          "type": "CHECKBOX",
          "defaultValue": false
        }
      ]
    },
    {
      "id": "deprecated",
      "label": "Deprecated Options",
      "elements": [
        {
          "id": "isCurrency",
          "label": "Is Currency (Controlled by setting the Value Type to currency)",
          "type": "CHECKBOX",
          "defaultValue": false
        },
        {
          "id": "currencySymbol",
          "label": "Currency Symbol (Controlled by the Currency Code)",
          "type": "TEXTINPUT",
          "defaultValue": "$"
        }
      ]
    }
  ]
}
